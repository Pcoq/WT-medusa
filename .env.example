# Medusa Environment Configuration for Production

NODE_ENV=production

# Database Configuration (Required)
# Use either DATABASE_URL or SUPABASE configuration
DATABASE_URL=postgresql://user:password@host:5432/medusa

# Alternative: Supabase Configuration
# SUPABASE_DATABASE_URL=postgresql://postgres:[password]@[host]:6543/postgres
# FALLBACK_TO_SUPABASE=true

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Secrets (Required - Generate secure random strings)
JWT_SECRET=your-jwt-secret-here
COOKIE_SECRET=your-cookie-secret-here

# CORS Configuration
STORE_CORS=http://localhost:8000,https://yourdomain.com
ADMIN_CORS=http://localhost:7001,https://admin.yourdomain.com
AUTH_CORS=http://localhost:8000,https://yourdomain.com

# Optional: Memory Configuration
NODE_OPTIONS=--max-old-space-size=2048

# Optional: File Upload Configuration
# MEDUSA_BACKEND_URL=https://your-api-domain.com

# Optional: Email Configuration
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_TEMPLATES_DIR=./src/templates

# Optional: Payment Provider Configuration
# STRIPE_API_KEY=sk_test_...
# PAYPAL_CLIENT_ID=...

# Supplier Pricing Sync Configuration
AUTO_SYNC_SUPPLIER_PRICES=true
AUTO_CREATE_VARIANTS=true
OVERWRITE_EXISTING_PRICES=true
DEFAULT_CURRENCY_CODE=EUR
PRICING_CONFLICT_STRATEGY=preferred_supplier